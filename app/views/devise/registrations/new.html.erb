<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal well"}) do |f| %>
  <%= f.input :uid, :autofocus => true %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div class="form-actions">
    <%= f.submit "登録する" ,class: 'btn btn-success'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
